# Production Environment Variables for AM Reports Hub
# Copy this file to .env on your production server

# Application Settings
NODE_ENV=production
PORT=3000

# Railway Configuration
RAILWAY_ENVIRONMENT=production
RAILWAY_VOLUME_PATH=/data

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
SESSION_SECRET=your-super-secure-session-secret-change-this-in-production

# Domain Configuration
BASE_URL=https://am-reports-hub-production.up.railway.app
CORS_ORIGIN=https://am-reports-hub-production.up.railway.app

# Database (if using external database)
# DATABASE_URL=your-database-url

# Email Configuration (if using email features)
# SMTP_HOST=your-smtp-host
# SMTP_PORT=587
# SMTP_USER=your-smtp-username
# SMTP_PASS=your-smtp-password

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security Settings
BCRYPT_ROUNDS=10
SESSION_TIMEOUT=86400000
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900000

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
AI_ANALYSIS_ENABLED=true
AI_RATE_LIMIT=100
AI_PROVIDER=openai 